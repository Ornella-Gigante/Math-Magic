<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple"
    android:padding="16dp">

    <!-- Estrellas decorativas en las esquinas -->
    <ImageView
        android:id="@+id/star_top_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:alpha="0.8" />

    <ImageView
        android:id="@+id/star_top_right"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="24dp"
        android:alpha="0.7" />

    <ImageView
        android:id="@+id/star_bottom_left"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="20dp"
        android:alpha="0.75" />

    <ImageView
        android:id="@+id/star_bottom_right"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.8" />

    <!-- ScrollView para asegurar adaptabilidad en pantallas pequeñas -->
    <ScrollView
        android:id="@+id/shop_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_main_menu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/text_shop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magic Shop"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/text_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magic Points: 0"
                android:textSize="18sp"
                android:textColor="#E1BEE7"
                android:layout_marginBottom="28dp" />

            <!-- Avatar 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/avatar_card_bg">

                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/avatar1"
                    android:contentDescription="Avatar 1" />

                <Button
                    android:id="@+id/button_unlock_avatar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlock (100 pts)"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Avatar 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/avatar_card_bg">

                <ImageView
                    android:id="@+id/avatar2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/avatar2"
                    android:contentDescription="Avatar 2" />

                <Button
                    android:id="@+id/button_unlock_avatar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlock (100 pts)"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Avatar 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/avatar_card_bg">

                <ImageView
                    android:id="@+id/avatar3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/avatar3"
                    android:contentDescription="Avatar 3" />

                <Button
                    android:id="@+id/button_unlock_avatar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlock (100 pts)"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Avatar 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/avatar_card_bg">

                <ImageView
                    android:id="@+id/avatar4"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/celebrate"
                    android:contentDescription="Avatar 4" />

                <Button
                    android:id="@+id/button_unlock_avatar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlock (100 pts)"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Avatar 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/avatar_card_bg">

                <ImageView
                    android:id="@+id/avatar5"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/celebrate"
                    android:contentDescription="Avatar 4" />

                <Button
                    android:id="@+id/button_unlock_avatar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlock (50 pts)"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Botón para volver al menú principal, siempre en el fondo -->
    <Button
        android:id="@+id/button_main_menu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6D4C41"
        android:elevation="3dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />
</RelativeLayout>
