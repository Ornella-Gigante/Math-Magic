<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple"
    android:padding="0dp">

    <!-- Decorative Stars for a Magical Look -->
    <ImageView
        android:id="@+id/star_top_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:alpha="0.8" />

    <ImageView
        android:id="@+id/star_top_right"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:alpha="0.7" />

    <ImageView
        android:id="@+id/star_bottom_left"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="26dp"
        android:alpha="0.75" />

    <ImageView
        android:id="@+id/star_bottom_right"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="18dp"
        android:alpha="0.8" />

    <!-- Central Container for Centered Content -->
    <LinearLayout
        android:id="@+id/center_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">

        <!-- Title -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#FFD600"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="32dp"
            android:gravity="center" />

        <!-- Wizard Avatar -->
        <ImageView
            android:id="@+id/wizard_avatar"
            android:layout_width="373dp"
            android:layout_height="607dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:contentDescription="Wizard Avatar"
            android:scaleType="centerCrop"
            android:src="@drawable/ready" />

        <!-- Vibrant Gradient "Loading..." Under the Avatar -->
        <TextView
            android:id="@+id/text_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="22sp"
            android:textColor="#FFDF72"
            android:fontFamily="sans-serif"
            android:fontFeatureSettings="smcp"
            android:layout_gravity="center_horizontal"
            android:shadowColor="#8357FF"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="12"
            android:letterSpacing="0.03"
            android:paddingTop="16dp"/>
    </LinearLayout>
</RelativeLayout>
