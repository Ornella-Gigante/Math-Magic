<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple"
    android:padding="0dp">

    <!-- Estrellas decorativas -->
    <ImageView
        android:id="@+id/star_top_left"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        android:alpha="0.85" />

    <ImageView
        android:id="@+id/star_top_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="18dp"
        android:alpha="0.7" />

    <ImageView
        android:id="@+id/star_bottom_left"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="26dp"
        android:alpha="0.7" />

    <ImageView
        android:id="@+id/star_bottom_right"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="18dp"
        android:alpha="0.85" />

    <!-- Contenedor centrado para todo el contenido principal con margen superior aumentado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <!-- Avatar y pregunta alineados horizontalmente -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="36dp"
            android:layout_gravity="center_horizontal">

            <FrameLayout
                android:id="@+id/avatar_frame"
                android:layout_width="90dp"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/avatar_glow"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/star_glow"
                    android:alpha="0.6"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/avatar_image"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:src="@drawable/welcome"
                    android:contentDescription="Avatar"
                    android:background="@drawable/avatar_card_bg"
                    android:elevation="3dp"
                    android:scaleType="centerCrop"
                    android:padding="6dp" />
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="24dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="#FFF7FEFC">

                <TextView
                    android:id="@+id/text_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:text="Question"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Opciones de respuesta bajo la pregunta -->
        <LinearLayout
            android:id="@+id/options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="42dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Option 1"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/option_button_background"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif"
                android:elevation="2dp" />

            <Button
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Option 2"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/option_button_background"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif"
                android:elevation="2dp" />

            <Button
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Option 3"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/option_button_background"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif"
                android:elevation="2dp" />

            <Button
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Option 4"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/option_button_background"
                android:fontFamily="sans-serif"
                android:elevation="2dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
