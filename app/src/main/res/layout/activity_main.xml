<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Decorative stars: corners and sides -->
    <ImageView
        android:id="@+id/star_top_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="12dp"
        android:alpha="0.85"/>

    <TextView
        android:id="@+id/text_best_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Score: 0"
        android:textSize="18sp"
        android:textColor="#FFD600"
        android:layout_below="@id/text_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/star_top_right"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:alpha="0.7"/>

    <ImageView
        android:id="@+id/star_bottom_left"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="24dp"
        android:alpha="0.7"/>

    <ImageView
        android:id="@+id/star_bottom_right"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:alpha="0.9"/>

    <ImageView
        android:id="@+id/star_top_center"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:alpha="0.5"/>

    <ImageView
        android:id="@+id/star_bottom_center"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/star_glow"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:alpha="0.5"/>

    <!-- Main Title -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Math Magic 🧙‍♂️✨"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:shadowColor="#AA00FF"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="8"/>

    <!-- Start Game Button -->

    <!-- Magic Shop Button -->

    <!-- Celebration Image Centered Below Buttons -->

    <Button
        android:id="@+id/button_start"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#9575CD"
        android:elevation="4dp"
        android:text="Start Game"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_shop"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_start"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="103dp"
        android:backgroundTint="#7C4DFF"
        android:elevation="4dp"
        android:text="Magic Shop"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/celebration_image"
        android:layout_width="278dp"
        android:layout_height="222dp"
        android:layout_below="@id/button_shop"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="Celebration image"
        android:src="@drawable/welcome" />

</RelativeLayout>
