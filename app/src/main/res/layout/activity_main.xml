<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Superior e inferior (esquinas y centro) -->
    <ImageView android:id="@+id/star_1" android:layout_width="26dp" android:layout_height="26dp"
        android:src="@drawable/star_glow" android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" android:layout_marginStart="16dp"
        android:layout_marginTop="18dp" android:alpha="0.0"/>
    <ImageView android:id="@+id/star_2" android:layout_width="30dp" android:layout_height="30dp"
        android:src="@drawable/star_white" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:layout_marginTop="28dp" android:alpha="0.0"/>
    <ImageView android:id="@+id/star_3" android:layout_width="28dp" android:layout_height="28dp"
        android:src="@drawable/star_magic" android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" android:layout_marginEnd="20dp"
        android:layout_marginTop="19dp" android:alpha="0.0"/>
    <ImageView android:id="@+id/star_4" android:layout_width="24dp" android:layout_height="24dp"
        android:src="@drawable/star_rainbow" android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" android:layout_marginStart="25dp"
        android:layout_marginBottom="30dp" android:alpha="0.0"/>
    <ImageView android:id="@+id/star_5" android:layout_width="26dp" android:layout_height="26dp"
        android:src="@drawable/star_glow" android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp" android:alpha="0.0"/>
    <ImageView android:id="@+id/star_6" android:layout_width="32dp" android:layout_height="32dp"
        android:src="@drawable/star_white" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:layout_marginBottom="36dp" android:alpha="0.0"/>

    <!-- Estrellas en el medio -->
    <ImageView android:id="@+id/star_7" android:layout_width="24dp" android:layout_height="24dp"
        android:src="@drawable/star_magic" android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" android:alpha="0.0"/>
    <ImageView android:id="@+id/star_8" android:layout_width="22dp" android:layout_height="22dp"
        android:src="@drawable/star_rainbow" android:layout_centerVertical="true"
        android:layout_marginStart="58dp" android:layout_marginTop="104dp"
        android:layout_alignParentStart="true" android:alpha="0.0"/>
    <ImageView android:id="@+id/star_9" android:layout_width="28dp" android:layout_height="28dp"
        android:src="@drawable/star_glow" android:layout_centerVertical="true"
        android:layout_marginEnd="58dp" android:layout_marginTop="104dp"
        android:layout_alignParentEnd="true" android:alpha="0.0"/>
    <ImageView android:id="@+id/star_10" android:layout_width="24dp" android:layout_height="24dp"
        android:src="@drawable/star_white" android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" android:layout_alignParentTop="true" android:alpha="0.0"/>

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Math Magic"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFEC89"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.10"
        android:fontFamily="serif"
        android:layout_marginTop="58dp"
        android:shadowColor="#4A23AC"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="14"
        android:padding="8dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Math Magic App"/>

    <TextView
        android:id="@+id/text_best_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Score: 0"
        android:textSize="18sp"
        android:textColor="#FFD600"
        android:layout_below="@id/text_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Botones -->

    <!-- Botones abajo y centrados -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_best_score"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/button_start"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="22dp"
            android:backgroundTint="#9575CD"
            android:elevation="4dp"
            android:text="Start Game"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_shop"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#7C4DFF"
            android:elevation="4dp"
            android:text="Magic Shop"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/celebration_image"
        android:layout_width="255dp"
        android:layout_height="296dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/avatar_rounded_bg"
        android:contentDescription="Celebration Image"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome" />
</RelativeLayout>
