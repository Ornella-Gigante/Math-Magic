<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/star_border"
        android:layout_width="94dp"
        android:layout_height="328dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="314dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="39dp"
        android:contentDescription="Star border"
        android:scaleType="fitCenter"
        android:src="@drawable/star_border" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="32dp"
        android:text="You scored X out of Y!"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

    <Button
        android:id="@+id/button_play_again"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_result"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="16dp"
        android:text="Play Again" />

    <!-- Imagen centrada debajo de los botones, con borde de estrella -->

    <Button
        android:id="@+id/button_main_menu"
        android:layout_width="139dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="322dp"
        android:text="Main Menu" />

    <FrameLayout
        android:id="@+id/star_image_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/button_main_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="10dp">

    </FrameLayout>


    <ImageView
        android:id="@+id/star_border8"
        android:layout_width="81dp"
        android:layout_height="331dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="323dp"
        android:layout_marginBottom="222dp"
        android:contentDescription="Star border"
        android:scaleType="fitCenter"
        android:src="@drawable/star_border" />

    <ImageView
        android:id="@+id/star_border9"
        android:layout_width="64dp"
        android:layout_height="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="617dp"
        android:contentDescription="Star border"
        android:scaleType="fitCenter"
        android:src="@drawable/star_border" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="227dp"
        android:layout_height="435dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"

        android:layout_marginEnd="138dp"
        android:layout_marginBottom="-125dp"
        android:contentDescription="Celebratory image"
        app:srcCompat="@drawable/celebrate" />

</RelativeLayout>
